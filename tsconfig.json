{
    "compilerOptions": {
        "lib": [
            "es2017",
            "es2015.promise"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "module": "commonjs",
        "paths": {
            "@config": ["config/"],
            "@config/*": ["config/*"],
            "@models": ["models/"],
            "@models/*": ["models/*"],
            "@decorators": ["decorators/"],
            "@guards": ["guards/"],
            "@handlers": ["handlers/"],
            "@controllers": ["controllers/"],
            "@utils": ["utils/"],
            "@utils/*": ["utils/*"]
        },
        "skipLibCheck": true
    }
}
